#!/bin/bash

# shellcheck disable=2086
add_sbin_paths() {
	local IFS=:

	PATH=$(append /sbin $PATH)
	PATH=$(append /usr/sbin $PATH)
	PATH=$(append /usr/local/sbin $PATH)

	export PATH
}

add_paths() {
  local IFS=:

  # Optional: add to PATH only if present (e.g. Google Cloud SDK, custom work dirs)
  [ -d "$HOME/google-cloud-sdk/bin" ] && PATH=$(append "$HOME/google-cloud-sdk/bin" $PATH)

  export PATH
}

add_sbin_paths
add_paths
